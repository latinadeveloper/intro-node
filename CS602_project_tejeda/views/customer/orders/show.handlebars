/
<br>
customerID: {{customerId}} / order

<h3>Order {{orderId}}</h3>
<table>
  <thead>
    <tr>
      <td>Product Name</td>
      <td>Quantity</td>
      <td>Price</td>
      <td>Total</td>
    </tr>
  </thead>
  <tbody>
    {{#each items}}
    	<tr>
        <td><a href="/products/{{this.product._id}}">{{this.product.name}}</a></td>
        <td>{{{this.quantity}}}</td>
        <td>{{formatNumber this.product.price style="currency" currency="USD"}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

Total: {{formatNumber total style="currency" currency="USD"}}<br/>

Date: {{formatDate date}}
